<h1>Add new ToDo Name:</h1>
<%= form_for :todo_list, url: todos_path do |f| %>
  <% if @todo.errors.any? %>
    <div class="alert alert-danger alert-dismissible error_explanation">
      <strong><%= pluralize(@todo.errors.count, "error")%> prohibited this task submission</strong>
      <ul>
        <% @todo.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-md-4 col-md-offset-4">
  <div class="form-horizontal">
    <div class="form-group">
      <%= f.label :name, class:"col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%= f.text_field :name , class: "form-control"%>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :task_date, class:"col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= f.date_select :task_date, {selected: Date.today}, {required: true} %>
      </div>
    </div>
    <div class="col-sm-offset-2">
      <%= f.submit "Save", class: "btn btn-default"%>
    </div>
  </div>
</div>

<%end%>
